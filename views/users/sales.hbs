<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Список ритейлеров</h5>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Имя</th>
                            <th scope="col">Почта</th>
                            <th scope="col">Номер телефона</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{email}}</td>
                            <td>{{phone}}</td>
                            <td>
                                <a href="/users/edit/{{_id}}" class="btn btn-warning">
                                    <i class="fas fa-pen"></i></a>
                                <a href="/users/sales/delete/{{_id}}" onclick="return confirm('Вы уверены?')" class="ml-2 btn btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>