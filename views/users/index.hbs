<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center pr-1 justify-content-between mobile-direction">
                    <h5 class="card-title">Список покупатели</h5>
                    {{#if control }}
                        <a href="/users/create" class="btn btn-success mr-1">Добавить</a>
                    {{/if}}
                </div>
                <div class="table-responsive">


                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">№</th>
                            <th scope="col">Имя</th>
                            <th scope="col">Номер телефона</th>
                            <th scope="col">Статус</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{index}}</td>
                            <td><a href="/users/more/{{_id}}">{{name}}</a></td>
                            <td>{{phone}}</td>
                            <td>{{role}}</td>
                            <td class="text-right">
                                <a href="/users/product/{{_id}}" class="btn btn-primary mr-2">
                                    Продажа
                                </a>
                                <a href="/users/edit/{{_id}}" class="btn btn-warning ml-2">
                                    <i class="fas fa-pen"></i></a>
                                <a href="/users/delete/{{_id}}" 
                                    onclick="return confirm('Вы уверены?')" 
                                    class="ml-2 btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>
</div>